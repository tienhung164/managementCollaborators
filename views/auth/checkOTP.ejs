<script> 
    $(document).ready(function(){
      $(".form-control").keyup(function () {
          $(this).next('.form-control').focus()
          
    })
    const timerCount = ()=>{
        setInterval(()=>{
        count--    
        if(count<0) return 
        $('#timer').html(count+'s')
       
    }, 1000)
  }
  var count=60    
  timerCount()



  $("button").click(()=>{
     let a= $("#input1").val()
     let b= $("#input2").val()
     let c= $("#input3").val()
     let d= $("#input4").val()
     let e= $("#input5").val()
     let f= $("#input6").val()
     let _otp= a+b+c+d+e+f
     let _email='<%=locals.email%>'     
     $.ajax({
     type: "post",
     url: "checkOTP",
     data: {
        otp:_otp,
        email:_email,
     },
     success: function (data) {
